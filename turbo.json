{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "deploy": {
      "dependsOn": ["build"],
      "cache": false
    },
    "clean": { "cache": false, "dependsOn": [] }
  }
}
