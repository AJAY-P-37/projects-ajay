{
  "name": "backend",
  "version": "1.0.0",
  "description": "Firebase Functions backend",
  "author": "Ajay P",
  "license": "MIT",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "build:watch": "tsc -p tsconfig.build.json --watch",
    "clean": "rm -rf node_modules dist",
    "dev": "yarn build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "get:config": "firebase functions:config:get > .runtimeconfig.json",
    "firebase:emulator": "firebase emulators:start --only functions",
    "serve": "npm run get:config && npm run build && npm run firebase:emulator",
    "serve:watch": "concurrently npm:get:config npm:build && concurrently npm:build:watch npm:firebase:emulator"
  },
  "engines": {
    "node": "22"
  },
  "main": "dist/index.js",
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-express": "^11.1.6",
    "bcrypt": "^6.0.0",
    "common-types": "1.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^6.0.1",
    "joi": "^18.0.1",
    "mongoose": "^8.18.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^6",
    "@types/cookie-parser": "^1",
    "@types/cors": "^2",
    "@types/express": "^5",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.1.0",
    "typescript": "^5.9.2"
  },
  "private": true
}
